<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<HBox prefHeight="174.0" prefWidth="436.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx/fxml/1" fx:controller="org.apps.advancewars.controllers.GameHUDController" alignment="CENTER">
    <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <Button fx:id="handleEndMove" onAction="#handleEndMove" style="-fx-font-size: 12pt; -fx-padding: 5px; -fx-min-width: 100px;" text="End Turn" />
    </VBox>
    <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <Button fx:id="surrenderBlueButton" style="-fx-font-size: 12pt; -fx-padding: 5px; -fx-min-width: 100px; -fx-background-color: #ec5353;" text="Surrender" />
    </VBox>
    <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <Button fx:id="surrenderRedButton" style="-fx-font-size: 12pt; -fx-padding: 5px; -fx-min-width: 100px; -fx-background-color: #5353ec;" text="Surrender" />
    </VBox>
    <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <Button fx:id="exitGameButton" onAction="#handleExitGame" style="-fx-font-size: 12pt; -fx-padding: 5px; -fx-min-width: 100px;" text="Exit Game" />
    </VBox>
</HBox>