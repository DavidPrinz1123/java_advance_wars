<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.apps.advancewars.controllers.MapSelectionController">
    <children>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="eonSpringsButton" onAction="#handleEonSprings" text="EonSprings" />
                <Button fx:id="littleIslandButton" onAction="#handleLittleIsland" text="LittleIsland" />
                <Button fx:id="pistonDamButton" onAction="#handlePistonDam" text="PistonDam" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
